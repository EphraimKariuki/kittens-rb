<%= link_to "Create New", new_kitten_path %>

<% if @kittens.any? %>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Cuteness</th>
            <th>Softness</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @kittens.each do |kitten| %>
            <tr>
            <td><%= kitten.name %></td>
            <td><%= kitten.age %></td>
            <td><%= kitten.cuteness %></td>
            <td><%= kitten.softness %></td>
            <td><%= link_to "Edit", edit_kitten_path(kitten) %> | <%= button_to "Delete", kitten_path(kitten), method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end%>